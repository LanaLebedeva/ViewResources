<resources>
    <!-- Base application theme. -->
    <style name="Theme.ViewResources" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mariner</item>
        <item name="colorPrimaryVariant">@color/mariner</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/shamrock</item>
        <item name="colorSecondaryVariant">@color/green_haze</item>
        <item name="colorOnSecondary">@color/outer_space</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:subtitleTextColor">@color/cinnabar</item>
        <item name="colorOnSurface">#FF5C5A5A</item>
        <item name="colorIcon">@color/alto</item>
        <item name="colorFirstHeader">@color/mariner</item>
        <item name="colorSecondHeader">@color/outer_space</item>
        <item name="colorTextButton">@color/white</item>
        <item name="colorThirdHeader">@color/white</item>
        <item name="colorContainerButton">@color/mariner</item>
        <item name="colorLabel">@color/outer_space</item>
        <item name="colorTitle">@color/white</item>
    </style>
    <style name="ButtonRoundConnerBlack" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/black</item>
    </style>
</resources>