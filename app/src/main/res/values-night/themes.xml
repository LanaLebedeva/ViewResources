<resources >
    <!-- Base application theme. -->
    <style name="Theme.ViewResources" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/god_gray</item>
        <item name="colorPrimaryVariant">@color/god_gray</item>
        <item name="colorOnPrimary">@color/gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/malibu</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/alto</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorControlHighlight">@color/gray</item>
        <!-- Customize your theme here. -->
        <item name="android:subtitleTextColor">@color/conifer</item>
        <item name="colorOnSurface">@color/gray</item>
        <item name="colorIcon">@color/gray</item>
        <item name="colorFirstHeader">@color/malibu</item>
        <item name="colorSecondHeader">@color/kournikova</item>
        <item name="colorTextButton">@color/god_gray</item>
        <item name="colorThirdHeader">@color/conifer</item>
        <item name="colorContainerButton">@color/malibu</item>
        <item name="colorLabel">@color/alto</item>
        <item name="colorTitle">@color/alto</item>
    </style>


    <style name="ButtonRoundConnerBlack" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/conifer</item>
    </style>
</resources>